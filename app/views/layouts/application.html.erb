<!DOCTYPE html>
<html>
  <head>
    <title>AirHaH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCUGKMLI_uve8ICKzsKwky7Mo3buC9vQfU" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email%>",
          "first_name": "<%= current_user.first_name%>",
          "last_name": "<%= current_user.last_name%>"
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
